{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${input:github_mcp_pat}"
      }
    }, 
    "airas": {
      "type": "stdio",
      "command": "sh", 
      "args": [
        "-c", 
        "uv run python src/airas/services/mcp_server/mcp_server.py"
      ]
    }
    // "airas-reloader": {
    //   "type": "stdio",
    //   "command": "sh", 
    //   "args": [
    //     "-c", 
    //     "npx mcp-reloader --include src/airas/services/mcp_server/mcp_server.py -- uv run python src/airas/services/mcp_server/mcp_server.py"
    //   ],
    // }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_mcp_pat",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ]
}